<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="gometro-uma-cordova" version="1.1.1">
    <name>GoMetro UMA</name>
    <author>GoMetro</author>
    <description>Official GoMetro UMA SDK for Cordova</description>
    <license>MIT</license>
    <keywords>ecosystem:cordova,cordova-android,android,gometro-uma</keywords>
    <repo>https://github.com/gometro/gometro-uma-cordova.git</repo>
    <issue>https://github.com/gometro/gometro-uma-cordova/issues</issue>

    <preference
        name="IOS_USAGE_DESCRIPTION"
        default="By allowing permission to your location, better data can be gathered to help improve your travel" />

    <engines>
        <engine name="cordova" version=">=7.0.0"/>
        <engine name="cordova-android" version=">=4.0.0"/>
        <engine name="cordova-ios" version=">=4.0.0" />
    </engines>

    <js-module src="src/index.js" name="GoMetroUma">
        <clobbers target="GoMetroUma"/>
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="GoMetroUma">
                <param name="android-package" value="com.gometro.uma.GoMetroUmaCordova"/>
                <param name="onload" value="true"/>
            </feature>
        </config-file>

        <hook src="platforms/android/src/main/javascript/useInternalRepo.js"
              type="before_build"/>

        <source-file src="platforms/android/src/main/java/com/gometroapp/uma/GoMetroUmaCordova.java"
                     target-dir="src/com/gometroapp/uma/"/>

        <framework src="com.gometroapp.uma:gometro-uma-android:1.1.1"/>
    </platform>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="GoMetroUma">
                <param name="ios-package" value="GoMetroUmaCordova" onload="true" />
            </feature>
        </config-file>

        <config-file target="*-Info.plist" parent="LSRequiresIPhoneOS">
            <true/>
        </config-file>

        <config-file target="*-Info.plist" parent="NSLocationAlwaysAndWhenInUseUsageDescription">
            <string>$IOS_USAGE_DESCRIPTION</string>
        </config-file>

        <config-file target="*-Info.plist" parent="NSLocationAlwaysUsageDescription">
            <string>$IOS_USAGE_DESCRIPTION</string>
        </config-file>

        <config-file target="*-Info.plist" parent="NSLocationWhenInUseUsageDescription">
            <string>$IOS_USAGE_DESCRIPTION</string>
        </config-file>

        <config-file target="*-Info.plist" parent="NSMotionUsageDescription">
            <string>$IOS_USAGE_DESCRIPTION</string>
        </config-file>

        <config-file target="*-Info.plist" parent="UIBackgroundModes">
            <array>
                <string>location</string>
            </array>
        </config-file>

        <header-file src="platforms/ios/Sources/GoMetroUmaCordova/GoMetroUmaCordova.h" />
        <header-file src="platforms/ios/Sources/GoMetroUmaCordova/GoMetroUmaCordova-Bridging-Header.h" />
        <source-file src="platforms/ios/Sources/GoMetroUmaCordova/GoMetroUmaCordova.m" />
        <source-file src="platforms/ios/Sources/GoMetroUmaCordova/GoMetroUmaCordova.swift" />

        <podspec>
            <config>
                <source url="https://cdn.cocoapods.org/"/>
            </config>
            <pods>
                <pod name="GoMetroUma" git="https://github.com/GoMetro/gometro-uma-ios.git" tag="1.1.1"/>
            </pods>
        </podspec>
    </platform>

</plugin>
